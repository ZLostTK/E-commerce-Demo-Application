{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "MONGODB_URI": "mongodb+srv://username:password@cluster.mongodb.net/ecommerce?retryWrites=true&w=majority",
        "JWT_SECRET": "your-super-secret-jwt-key",
        "STRIPE_SECRET_KEY": "sk_test_your_stripe_secret_key",
        "CORS_ORIGIN": "https://ecommerce-demo-app.vercel.app,https://ecommerce-demo-app.netlify.app"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "3000",
        "MONGODB_URI": "mongodb+srv://username:password@cluster.mongodb.net/ecommerce-staging?retryWrites=true&w=majority",
        "JWT_SECRET": "your-staging-jwt-secret",
        "STRIPE_SECRET_KEY": "sk_test_your_stripe_secret_key",
        "CORS_ORIGIN": "https://ecommerce-demo-app-staging.vercel.app"
      }
    },
    "development": {
      "variables": {
        "NODE_ENV": "development",
        "PORT": "3000",
        "MONGODB_URI": "mongodb+srv://username:password@cluster.mongodb.net/ecommerce-dev?retryWrites=true&w=majority",
        "JWT_SECRET": "your-dev-jwt-secret",
        "STRIPE_SECRET_KEY": "sk_test_your_stripe_secret_key",
        "CORS_ORIGIN": "http://localhost:5173"
      }
    }
  }
}
